<!doctype html>
<html>
<head>
    <title>Reset Password | Academy by PatSnap</title>
        <link rel="apple-touch-icon" href="/public/apple-touch-icon.png">
        <link rel="stylesheet" href="/public/bootstrap.css" crossorigin="anonymous"> <!-- load bootstrap css -->    
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style>

    .jumbotron{
        background-image:url('https://www.patsnap.com/hubfs/Academy/Images/AcademyLoginHeader.jpg');
        background-size:cover;
        color:#fff;
        min-height:400px;
        background-repeat:no-repeat;
        }
    </style>
</head>
<body>

   
   <div class="jumbotron text-center jumbotron-fluid">
    <div class="row">
        <div class="col-md-6 mr-auto ml-auto">
        <img width="620" class = "img-fluid" src ="https://www.patsnap.com/hubfs/Academy/Logo/academy_rocket_logo_white.svg">
        </div>
    </div>
    </div>


<div class="container main-content">

    <div class ="row">
    <div class="col-md-6 ml-auto mr-auto">
    <h1>Reset Password</h1>
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

            <form method="post">
                <div class="form-group">
                    <label>Enter a new password: </label>
                    <input required type="password" class="form-control" name="password" value='' placeholder="New Password">
                </div>
               
                <button type="submit" class="btn btn-primary btn-lg">Update Password</button>
            </form>
            <hr>
            <a href="/"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Login Page</a>

    </div>
    </div>
    </div>

<%- include academy/partials/footer.ejs %>

<script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>
</html>
