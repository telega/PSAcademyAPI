<!doctype html>
<html>
<head>
    <title>Users| Admin</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li ><a href="/courses">Courses</a></li>
        <li class="active"><a href="/profile">Profile</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li><a href="/admin">Home</a></li>
                <li class = "active">Profile</li>
            </ol>
        </div>
    </div>
    <div class = "row">
        <div class = "col-md-12">
            <h1> Your Profile </h1>
        <div>
    </div>
    
    <div class = "row">
        <div class="col-md-12">
        <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%=user.local.profile.firstName%> <%=user.local.profile.lastName%></h2>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
        <h2>Progress</h2>
            <%=user.local.academyProgress%>
        </div>
        <div class="col-md-12">
        <h2>User</h2>
                
            <%=user%>
        </div>
    </div>

    <div class = "row">
        <div class="col-md-12">
            <button id = "testButton" data-user-id="<%=user._id%>">test</button>
        </div>
    </div>

<!-- Modals -->


<!-- Scripts --> 
<script>

$(document).ready(function(){

    $("#testButton").on('click', function(e){
      e.preventDefault();
      var url = "/api/users/progress";
      data = {
            itemId: 9999,
            itemProgress: 1,
            unitId: '59831a4825354d05eba5a9e3'
      }
      $.ajax({
                type: "PUT",
                url: url,
                dataType: 'json',
                async: true,
                data: data,
                success: function (){
                        location.reload(true);                    
                    }
      });
    })

    
})
</script>
</body>
</html>
