<!doctype html>
<html>
<head>
    <title><%=course.name%> | Academy by PatSnap</title>
        <link rel="stylesheet" href="/public/bootstrap.css" crossorigin="anonymous"> <!-- load bootstrap css -->    
 <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<style>
  body{
    padding-top:65px;
     }
    .jumbotron{
      background-image:url(<%=course.courseImageUrl%>);
      background-size:cover;
      color:#fff;
      min-height:340px;
    }

    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
<div class="container">
      <a class="navbar-brand"  href="/"><img src="https://www.patsnap.com/hubfs/Academy/Logo/Academy_Logo_WHITE-Text-sm.png" alt="Academy by PatSnap Logo"></a>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class=" navbar-nav mr-auto">
                <li class = "nav-item"><a href="/courses" class = "nav-link active" ><span class="fa fa-graduation-cap" aria-hidden="true"></span> Courses</a></li>
        <li class = "nav-item"><a href="/profile" class = "nav-link" ><span class="fa fa-user-circle" aria-hidden="true"></span> Profile</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class = "nav-item"><a href="/logout" class="nav-link">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
    </div>
</nav>
<div class="container">

  <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li class = "breadcrumb-item"><a href="/">Home</a></li>
                <li class = "breadcrumb-item"><a href="/courses">Courses</a></li>
                <li class = "breadcrumb-item active"><%=course.name%></li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
  

<div class="row">
  <div class="col-md-6">
    <div class="jumbotron">
      <h1><%=course.name%></h1>
    </div>
  </div>
  <div class="col-md-5 ml-auto mb-4">
    <h2>Course Description</h2>
    <p><%=course.description%></p>
    <h3>Course Progress</h3>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="<%=courseProgress%>" style="width:<%=courseProgress%>%; " aria-valuemin="0" aria-valuemax="100"><%=courseProgress%>%</div>
    </div>
  </div> 
</div>
    

    <div class="row">
        <div class = "col-md-12">
       
            <h2>Units in this Course</h2>
            <hr>

        </div>
    </div>
    
    <div class = "row">
        
        <% course.units.forEach(function(unit){
          if(unit.published == true) { %>
                         <div class = "col-md-4 mt-2 mb-2"> 

              <div class="card" >
                  <img src="<%=unit.unitThumbImageUrl%>" alt="<%=unit.name%>" class="card-img-top">
                  <div class="card-body">
                    <h4 class="card-title"><%=unit.name%></h4>
                    <p class="card-text"><%=unit.description%></p>
                    <a href="/courses/<%=course._id%>/units/<%=unit._id%>" class="btn btn-primary" role="button">Take the Unit</a>
                  </div>
              </div>
              </div>
            <%}}); %>


    </div>
    
</div>

<%- include partials/footer.ejs %>

<script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>
</html>
