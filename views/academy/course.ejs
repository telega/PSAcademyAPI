<%- include partials/header.ejs %>

<div class="container main-content">
  
<div class="row">
  <div class="col-md-6">
    <div class="jumbotron">
      <h1><%=course.name%></h1>
    </div>
  </div>
  <div class="col-md-6 ml-auto mb-4">
    <h2>Course Description</h2>
    <p><%=course.description%></p>
    <h3>Course Progress</h3>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="<%=courseProgress%>" style="width:<%=courseProgress%>%; " aria-valuemin="0" aria-valuemax="100"><%=courseProgress%>%</div>
    </div>
  </div> 
</div>
    

    <div class="row">
        <div class = "col-md-12">
        
            <h2>Units in this Course</h2>
            <hr>

        </div>
    </div>
    
    <div class = "row">
    <div class = "col-md-12 mt-2 mb-2"> 

        <div class="card-deck mb-4">

        <%let publishedUnitCount = 1;
        let lastCardIsOdd = false;
        course.units.forEach(function(unit){
          
          if(unit.published == true){ 
            publishedUnitCount +=1;
            if(publishedUnitCount%2 == 0){
              lastCardIsOdd = true;%>
              </div>
              <div class="card-deck mb-4">
            <%} else {
              lastCardIsOdd = false;
            }%>
               <%let filteredItems = items.filter(i => i.id == unit._id);
                  if(filteredItems.length > 0){ %>
              <div class="card"  >
                  <img src="<%=unit.unitThumbImageUrl%>" alt="<%=unit.name%>" class="card-img-top">
                  <div class="card-body">
                    <h4 class="card-title"><%=unit.name%></h4>
                    <p class="card-text"><%=unit.description%></p>

                    <% let unitProgress = Math.round(filteredItems[0].progress);%>
                      <% if(unitProgress >= 100){ %>

                        <div class="mb-4 text-light moduleProgress completed">                 
                           Completed <span class="fa fa-check" aria-hidden="true"></span>
                        </div>

                      <% } else {%>
                        <strong>You have completed <%=unitProgress%> % of this unit.</strong></p>
                    <%}%>

                    <p class="card-text"><a href="/courses/<%=course._id%>/units/<%=unit._id%>" class="btn btn-secondary" role="button">Resume Unit</a></p>
                  </div>
              </div>

              <%} else {%>

              <div class="card"  >
                  <img src="<%=unit.unitThumbImageUrl%>" alt="<%=unit.name%>" class="card-img-top">
                  <div class="card-body">
                    <h4 class="card-title"><%=unit.name%></h4>
                    <p class="card-text"><%=unit.description%></p>
                    <p class="card-text"><a href="/courses/<%=course._id%>/units/<%=unit._id%>" class="btn btn-primary" role="button">Take the Unit</a></p>
                  </div>
              </div>



              <%}%>
            <%}}); %>

             <%if(lastCardIsOdd){%>
            <div class="card bg-white"></div>
            <%}%>

            </div>
    </div>

</div>
        <div class="row">
      <div class="col-md-12">
      <p>
      <hr>
      <a href="/courses" alt="back" class="btn btn-secondary"><span class="fa fa-arrow-left" aria-hidden="true"></span> Back to Courses</a></p>

      </div>
    </div>
    
</div>

<%- include partials/footer.ejs %>

<script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>
</html>
