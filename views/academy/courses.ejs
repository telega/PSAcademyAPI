<!doctype html>
<html>
<head>
    <title>Courses | Academy by PatSnap</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/courses">Courses</a></li>
        <li ><a href="/profile">Profile</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li class = "active">Courses</li>
            </ol>
        </div>
    </div>
    <div class = "row">
        <div class = "col-md-12">
          <div class="page-header">
            <h1><span class="glyphicon glyphicon-education" aria-hidden="true"></span> Courses </h1>
          </div>
        <div>
    </div>
    <div class = "row">
            <% courses.forEach(function(course){
                if (course.published == true){  %>
              <div class="col-md-4">
                <div class="thumbnail">
                  <img src="<%=course.courseThumbImageUrl%>" alt="<%=course.name%>">
                  <div class="caption">
                    <h3><%=course.name%></h3>
                    <p><%=course.description%></p>
                    <p><a href="/courses/<%=course._id%>" class="btn btn-primary" role="button">Take the Course</a></p>
                  </div>
                </div>
              </div>
            <% }
            }); %>
        </div>
    </div>
   
</div>


</body>
</html>
