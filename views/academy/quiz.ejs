<!doctype html>
<html>
<head>
    <title><%=unit.name%>| Academy by PatSnap</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        .jumbotron{
          background-image:url(<%=unit.unitImageUrl%>);
          background-size:cover;
          color:#fff;
          min-height:400px;
        }
        /* BASE QUIZ STYLES */
        /* These styles ensure that the necessary elements are hidden for toggling */
        
        /* DO NOT EDIT UNLESS YOU KNOW WHAT YOU ARE DOING!! */
        
        .startQuiz,
        .nextQuestion,
        .backToQuestion,
        .questions li.question,
        .questions li.question .responses,
        .questions li.question .responses .correct,
        .questions li.question .responses .incorrect,
        .quizResults {
            display: none;
        }
        
        /* If response messages are disabled or only shown on quiz completion,
           nextQuestion button IS checkAnswer button - so it must be displayed */
        .nextQuestion.checkAnswer {
            display: block;
        }
        
        ol.questions,
        ul.answers,
        ul.responses,
        ol.questions li,
        ul.answers li,
        ul.responses li {
            list-style-type: none;
        }
        
        /* Accessibility */
        .quizName span:first-child {
            border: 0;
            clip: rect(0 0 0 0);
            height: 1px;
            margin: -1px;
            overflow: hidden;
            padding: 0;
            position: absolute;
            width: 1px;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/admin/courses">Courses</a></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">

  <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="/courses">Courses</a></li>
                <li><a href="/courses/<%=course._id%>/"><%=course.name%></a></li>
                <li><a href="/courses/<%=course._id%>/units/<%=unit._id%>"><%=unit.name%></a></li>
                <li class = "active">Quiz</li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
  <div class="jumbotron">
    <h2><%=unit.name%></h2>
    <h1>Quiz</h1>
  </div>

            
<div id="slickQuiz">
        <h1 class="quizName"><!-- where the quiz name goes --></h1>

        <div class="quizArea">
            <div class="quizHeader">
                <!-- where the quiz main copy goes -->

                <a class="button startQuiz" href="#">Get Started!</a>
            </div>

            <!-- where the quiz gets built -->
        </div>

        <div class="quizResults">
            <h3 class="quizScore">You Scored: <span><!-- where the quiz score goes --></span></h3>

            <h3 class="quizLevel"><strong>Ranking:</strong> <span><!-- where the quiz ranking level goes --></span></h3>

            <div class="quizResultsCopy">
                <!-- where the quiz result copy goes -->
            </div>
        </div>
</div>
        </div>
    </div>
</div>

<!-- Modals -->

<!-- Scripts --> 

<script src ="https://cdn.jsdelivr.net/gh/jewlofthelotus/SlickQuiz/js/slickQuiz.js"></script>
<script>
$(document).ready(function(){

  var quizJSON = parseQuizData(JSON.parse('<%-quiz%>'));
  console.log(quizJSON);
  $('#slickQuiz').slickQuiz({
      json:quizJSON
    });

});

function parseQuizData(d){

  var info = {
    name:d.name
  }

  var questions = d.questions;

  return {info,questions}
} 

</script>
</body>
</html>
