<%- include partials/header.ejs %>
<div class="container main-content">
    <div class = "row">
        <div class = "col-md-12">
            <h1 class="display-4"><span class="fa fa-list" aria-hidden="true"></span> Academy Leaderboard</h1>
        <div>
    </div>

      <table width='100%' class="table table-striped">
                <thead class='thead-default'>
                    <th>Rank</th>
                    <th>Name</th>
                    <th>Academy Score </th>
                </thead>
                <tbody>
                    <%
                    let currentRank = 0; 
                    items.forEach(function(item){
                      if(item.rank > currentRank){
                        currentRank ++;
                      }
                      %>
                    
                    <%if (item.isUser){%>
                    <tr>
                        <td><strong> <%=currentRank%> </strong></td>
                        <td><strong> <%=item.name%> </strong></td>
                        <td><strong> <%=item.score%></strong></td>
                    </tr>
                    <%} else {%>

                    <tr>
                        <td> <%=currentRank%></td>
                        <td> <%=item.name%></td>
                        <td> <%=item.score%></td>
                    </tr>



                    <%}});%>
                </tbody>
            </table>


      <div class="row">
      <div class="col-md-12">
      <p>
      <hr>
      <a href="/" alt="Academy Home" class="btn btn-secondary"><span class="fa fa-home" aria-hidden="true"></span> Back to Academy Home</a></p>

      </div>
      </div>
    </div>

</div>

</div>

</div>
