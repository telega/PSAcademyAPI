<!doctype html>
<html>
<head>
    <title>Quizzes | Admin</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/admin/courses">Courses</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li class="active"><a href="/admin/quizzes">Quizzes</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class = "row">
        <div class = "col-md-12">
            <h1><span class="glyphicon glyphicon-education" aria-hidden="true"></span> Academy Admin </h1>
        <div>
    </div>
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li><a href="/admin">Home</a></li>
                <li class="active"><a href="/admin/quizzes">Quizzes</a></li>
                <li><a href="/admin/quizzes/<%=quiz._id%>"><%=quiz.name%></a></li>
                <li class="active">Question</li>
            </ol>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <h2>Edit Question</h2>
        </div>
    </div>
        <div class = "row">
        <div class = "col-md-12">
        <table width='100%' class="table table-striped">
            <thead>
              <th></th>
              <th></th>
              <th>Edit</th>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Question</strong></td>
                    <td><%= question.q %></td>
                     <td><button data-toggle="modal" data-target="#updateQuestionModal" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
                </tr>
                <tr>
                    <td><strong>Correct Response</strong></td>
                    <td><%= question.correct %></td>
                    <td><button data-toggle="modal" data-target = "#updateCorrectResponseModal" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
                </tr>
                <tr>
                    <td><strong>Incorrect Response</strong></td>
                    <td><%= question.incorrect %></td>
                    <td><button data-toggle="modal" data-target = "#updateIncorrectResponseModal" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
                </tr>
                <tr>
                    <td><strong>Order</strong></td>
                    <td><%= question.order %></td>
                    <td><button data-toggle="modal" data-target="#updateOrderModal" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
                </tr>
                
            </tbody>
            </table>
        </div>
    </div>
    <% if(question.a.length > 0 ){ %>
    <div class = "row">
        <div class = "col-md-12">
        <h3>Answer Responses</h3>
        <table width='100%' class="table table-striped">
            <thead>
                <th>Response</th>
                <th>Correct</th>
                <th>Actions</th>
            </thead>    
            <tbody>
            <% question.a.forEach(function(answer){ %>
                <tr>
                    <td><%= answer.option %></td>
                    <td><%= answer.correct %></td>
                    <td>
                      <button  data-responses = "<%= JSON.stringify(question.a) %>" data-quiz-id = "<%=quiz._id %>" data-question-id= "<%=question._id%>" data-response-id ="<%=answer._id%>" data-toggle="modal" data-target="#deleteResponseModal" class = "btn btn-danger deleteResponse">Delete</button>
                    </td>
                </tr>

            <% }); %>
            </tbody>
            </table>
        </div>
    </div>
    <% } %>

    <div class = "row">
        <div class ="col-md-2">
            <button data-toggle="modal" data-target="#addResponseModal" class = "btn btn-primary "><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a New Response Option</button>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="addResponseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a New Response</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "addResponse" data-responses="<%= JSON.stringify(question.a) %>" data-quiz-id="<%=quiz._id%>" data-question-id="<%=question._id%>">
            <div class="form-group">
              <label for="responseText">Answer Text</label>
              <input required type="text" class="form-control" id="responseText" placeholder="To get to the other side.">
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox"> Check if Correct
              </label>
            </div>
            <button type="submit" class="btn btn-success">Add Response</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" >Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteResponseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
        <strong>You are about to Delete this Response.This cannot be undone.</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="responseDeleteConfirm">Delete Response</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="updateQuestionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "editQuestion">
              <div class="form-group">
                <label forid="newQuestion">New Question</label>
                <input required type="text" class="form-control" id="newQuestion" placeholder="<%=question.q%>">
              </div>
              <button type="submit" data-quiz-id = "<%=quiz._id%>" data-question-id = "<%=question._id%>" class="btn btn-warning" id="updateQuestion">Update Question</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="updateCorrectResponseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Correct Response</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "editQuestion">
              <div class="form-group">
                <label forid="newCorrectResponse">New Correct Response</label>
                <input required type="text" class="form-control" id="newCorrectResponse" placeholder="<%=question.correct%>">
              </div>
              <button type="submit" data-quiz-id = "<%=quiz._id%>" data-question-id = "<%=question._id%>" class="btn btn-warning" id="updateCorrectResponse">Update Response</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="updateIncorrectResponseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Incorrect Response</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "editQuestion">
              <div class="form-group">
                <label forid="newCorrectResponse">New Incorrect Response</label>
                <input required type="text" class="form-control" id="newIncorrectResponse" placeholder="<%=question.incorrect%>">
              </div>
              <button type="submit" data-quiz-id = "<%=quiz._id%>" data-question-id = "<%=question._id%>" class="btn btn-warning" id="updateIncorrectResponse">Update Response</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="updateOrderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Question Order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "editDescription">
              <div class="form-group">
                <label forid="newTitle">New Question Order</label>
                <input required type="number" class="form-control" id="newOrder" placeholder="<%=question.order%>" >
              </div>
              <button type="submit" data-quiz-id = "<%=quiz._id%>" data-question-id = "<%=question._id%>" class="btn btn-warning" id="updateOrder">Update Order</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Scripts --> 
<script>

$(document).ready(function(){
    
    $("#addResponse").submit(function(e){
     
      var modal = $("#addResponseModal");
      e.preventDefault();

      var url = "http://localhost:3000/api/quizzes/" + $(this).data('quizId') + "/questions/" + $(this).data('questionId');
      var data = {};

      var newResponse = {}
      var r = $(this).data('responses') ;
      var responses = JSON.parse(JSON.stringify(r));
      newResponse.option = $("#responseText").val();
      
      if( $(this).find('input:checked').prop('checked')){
            newResponse.correct = true;
          } else {
            newResponse.correct = false;
      }

      responses.push(newResponse);
      data.a = JSON.stringify(responses);
      
      console.log(data);

      $.ajax({
        type: "PUT",
        url: url,
        dataType: 'json',
        async: true,
        data: data,
        success: function (){
              location.reload(true);                    
            }
        });
    });


    $('#deleteResponseModal').on('show.bs.modal', function(e){
        var button = $(e.relatedTarget); 
        var modal = $(this);
        modal.find('#responseDeleteConfirm').on('click', function(e){
          e.preventDefault();          
          var data = {};
          var responsesArray = button.data('responses');
          var responseToDeleteId = button.data('responseId')
          data.a = JSON.stringify(responsesArray.filter( response => response._id != responseToDeleteId));
          var url = "http://localhost:3000/api/quizzes/" + button.data('quizId') + '/questions/' + button.data('questionId');

          $.ajax({
                  type: "PUT",
                  url: url,
                  dataType: 'json',
                  data: data,
                  async: true,
                  success: function (){
                     location.reload(true);
                  }
          })
        })
    });

    $('#deleteResponseModal').on('hide.bs.modal', function(e){
        var modal = $(this);
        modal.find('#responseDeleteConfirm').off('click');
    });

    $("#updateCorrectResponse").on('click', function(e){
      e.preventDefault();
      var url = "http://localhost:3000/api/quizzes/" + $(this).data('quizId') + /questions/ + $(this).data('questionId');
      
      data = {
        correct: $('#newCorrectResponse').val()
      }
      $.ajax({
                type: "PUT",
                url: url,
                dataType: 'json',
                async: true,
                data: data,
                success: function (){
                  location.reload(true);                    
                }
      });
    })
    
    $("#updateIncorrectResponse").on('click', function(e){
      e.preventDefault();
      var url = "http://localhost:3000/api/quizzes/" + $(this).data('quizId') + /questions/ + $(this).data('questionId');
      
      data = {
        incorrect: $('#newIncorrectResponse').val()
      }
      console.log(data);
      $.ajax({
                type: "PUT",
                url: url,
                dataType: 'json',
                async: true,
                data: data,
                success: function (){
                  location.reload(true);                    
                }
      });
    })

    $("#updateOrder").on('click', function(e){
      e.preventDefault();
      var url = "http://localhost:3000/api/quizzes/" + $(this).data('quizId') + /questions/ + $(this).data('questionId');
      data = {
        order: $('#newOrder').val()
      }
      $.ajax({
            type: "PUT",
            url: url,
            dataType: 'json',
            async: true,
            data: data,
            success: function (){
                    location.reload(true);                    
                }
      });
    })
})
</script>
</body>
</html>
