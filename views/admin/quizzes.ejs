<!doctype html>
<html>
<head>
    <title>Quizzes| Admin</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/admin/courses">Courses</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li class="active"><a href="/admin/quizzes">Quizzes</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class = "row">
        <div class = "col-md-12">
            <h1><span class="glyphicon glyphicon-education" aria-hidden="true"></span> Academy Admin </h1>
        <div>
    </div>
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li><a href="/admin">Home</a></li>
                <li class = "active">Quizzes</li>
            </ol>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <h2>Quizzes</h2>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <table width='100%' class="table table-striped">
            <thead>
                <th>Quiz Name</th>
                <th>Quiz ID</th>
                <th>Actions</th>
            </thead>    
            <tbody>
            <% quizzes.forEach(function(quiz){ %>
                <tr>
                    <td><%= quiz.name %></td>
                    <td><%= quiz._id %></td>
                    <td>
                    <a href = "/admin/quizzes/<%= quiz._id %>" data-quiz-id = "<%= quiz._id %>" class = "btn btn-default">Edit</a>
                    <button  data-quiz-id = "<%= quiz._id %>" data-quiz-name = "<%= quiz.name %>" data-toggle="modal" data-target="#deleteQuizModal" class = "btn btn-danger deleteQuiz">Delete</button>
                    </td>
                </tr>

            <% }); %>
            </tbody>
            </table>
        </div>
    </div>
    <div class = "row">
        <div class ="col-md-2">
            <button data-toggle="modal" data-target="#addQuizModal" class = "btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a New Quiz</button>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="addQuizModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a New Quiz</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "addQuiz">
            <div class="form-group">
              <label for="quizName">Quiz Name*</label>
              <input required type="text" class="form-control" id="quizName" placeholder="Name">
            </div>
            <button type="submit" class="btn btn-success">Add Quiz</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" >Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteQuizModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="quizToDeleteName"></p>
        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
        <strong>You are about to Delete this Quiz.This cannot be undone.</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="quizDeleteConfirm">Delete Quiz</button>
      </div>
    </div>
  </div>
</div>

<!-- Scripts --> 
<script>

$(document).ready(function(){
    
    $("#addQuiz").submit(function(e){
        e.preventDefault();
        var data = {}
        data.name = $("#quizName").val();
        $.ajax({
            type: "POST",
            url: "http://localhost:3000/api/quizzes",
            dataType: 'json',
            async: true,
            data: data,
            success: function (){
                location.reload(true);                    
              }
            });
    })

    $('#deleteQuizModal').on('show.bs.modal', function(e){
        var button = $(e.relatedTarget); 
        var modal = $(this);
        modal.find('#quizToDeleteName').text(button.data('quizName'));
        modal.find('#quizDeleteConfirm').on('click', function(e){
            var url = "http://localhost:3000/api/quizzes/" + button.data('quizId');
            $.ajax({
                  type: "DELETE",
                  url: url,
                  dataType: 'json',
                  async: true,
                  success: function (){
                        location.reload(true);
                    }
            })
        })
    });

    $('#deleteQuizModal').on('hide.bs.modal', function(e){
        var modal = $(this);
        modal.find('#quizDeleteConfirm').off('click');
    });
    
})
</script>
</body>
</html>
