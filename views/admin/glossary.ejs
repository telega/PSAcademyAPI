<%- include partials/header.ejs %>
<body>

<div class="container">
    
    <div class = "row">
        <div class = "col-md-12">
            <h1><span class="fa fa-book" aria-hidden="true"> </span> Glossary Terms</h1>
            <hr>
        <div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <h2>Terms</h2>
            <p>Defined Terms: <strong><%=glossaryTerms.length%> </strong></p>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <table width='100%' class="table table-striped">
            <thead class="thead-default">
                <th>Term Heading</th>
                <th>Actions</th>
            </thead>    
            <tbody>
            <% glossaryTerms.forEach(function(term){ %>
                <tr>
                    <td><%= term.heading%></td>
                    <td>
                        <a  class = "btn btn-secondary" href="/admin/glossary/<%=term._id%>" >Edit</a>     
                        <button  data-term-id = "<%= term._id %>" data-term-heading="<%=term.heading%>" data-toggle="modal" data-target="#termDeleteModal" class = "btn btn-danger deleteTerm">Delete</button>            
                    </td>
                </tr>
            <% }); %>
            </tbody>
            </table>
        </div>
    </div>
    <div class = "row">
        <div class ="col-md-2">
            <button data-toggle="modal" data-target="#termAddModal" class = "btn btn-primary"><span class="fa fa-plus" aria-hidden="true"></span> Add a New Glossary Term</button>
        </div>
    </div>
</div>  

<!-- Modals -->

<div class="modal fade" id="termAddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a New Glossary Term</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "addGlossaryTerm">
            <div class="form-group">
              <label for="termHeading">Term Heading*</label>
              <input required type="text" class="form-control" id="termHeading" placeholder="Heading">
            </div>
            <div class="form-group">
              <label for="termDefinition">Term Definition</label>
              <textarea class="form-control trumbowyg" id="termDefinition" >Lorem Ipsum Dolor </textarea>
            </div>
            <div class="form-group">
              <label for="moreLink">More Link</label>
              <input type="text" class="form-control" id="moreLink">
            </div>
            <button type="submit" class="btn btn-success">Add Term</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" >Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="termDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="termToDeleteHeadign"></p>
        <strong>You are about to Delete this Term. This cannot be undone.</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="termDeleteConfirm">Delete Term</button>
      </div>
    </div>
  </div>
</div>

<%- include partials/footer.ejs%>