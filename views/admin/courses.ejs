<!doctype html>
<html>
<head>
    <title>Courses | Admin</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        body        { padding-top:40px; }
    </style>
</head>
<body>
<div class="container">
    <div class = "row">
        <div class = "col-md-12">
            <h1>Academy Admin</h1>
            <h2>Courses </h2>
            <table width='100%' class="table table-striped">
            <thead>
                <th>#</th>
                <th>Course Name</th>
                <th>Status</th>
                <th>Actions</th>
            </thead>    
            <tbody>
            <% courses.forEach(function(course){ %>
                <tr>
                    <td><%= course.order %></td>
                    <td><%= course.name %></td>
                    <td><% if(course.published==true){ %>
                            <strong> Published </strong>
                        <% } else { %>
                            Draft
                        <% } %>
                    </td>
                    <td><button data-course-id = "<%= course._id %>" class = "btn btn-default">Edit</button></td>
                </tr>

            <% }); %>
            </tbody>
            </table>
        </div>
    </div>
    <div class = "row">
        <div class = "col-md-12">
        <h2>Add a New Course</h2>
            <form id = "addCourse">
              <div class="form-group">
                <label for="courseName">Course Name*</label>
                <input required type="text" class="form-control" id="courseName" placeholder="Name">
              </div>
              <div class="form-group">
                <label for="courseDescription">Course Description</label>
                <input type="textarea" class="form-control" id="courseDescription" placeholder="Course Description">
              </div>
              <div class="form-group">
                <label for="courseOrder">Order</label>
                <input type="number" class="form-control" id="courseOrder">
              </div>
              <button type="submit" class="btn btn-primary">Add Course</button>
            </form>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="courseAddedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Course Added</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Added a new course to the Academy.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="courseAddedConfirm">Ok</button>
      </div>
    </div>
  </div>
</div>
<script>

$(document).ready(function(){
    $("#addCourse").submit(function(e){
            e.preventDefault();
            var data = {}
            data.name = $("#courseName").val();
            data.description = $("#courseDescription").val();
            data.order = $("#courseOrder").val()||99;
            $.ajax
                ({
                  type: "POST",
                  url: "http://localhost:3000/api/courses",
                  dataType: 'json',
                  async: true,
                  data: data,
                  success: function (){
                    $('#courseAddedModal').modal('toggle')
                                      }
                });

    })

    $('#courseAddedConfirm').on('click', function(e){
            e.preventDefault();
            location.reload(true);
    })
    
})
</script>
</body>
</html>
