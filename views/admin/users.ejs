<!doctype html>
<html>
<head>
    <title>Users| Admin</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src = "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/admin/courses">Courses</a></li>
        <li class="active"><a href="/admin/users">Users</a></li>
        <li><a href="/admin/quizzes">Quizzes</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class = "row">
        <div class = "col-md-12">
            <h1><span class="glyphicon glyphicon-education" aria-hidden="true"></span> Academy Admin </h1>
        <div>
    </div>
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li><a href="/admin">Home</a></li>
                <li class = "active">Users</li>
            </ol>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <h2>Users</h2>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <table width='100%' class="table table-striped">
            <thead>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </thead>    
            <tbody>
            <% users.forEach(function(user){ %>
                <tr>
                    <td><%= user.local.email %></td>
                    <td><%= user.local.role %></td>
                    <td><a href = "/admin/users/<%= user._id %>" class = "btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span></a>
                    <button  data-user-id = "<%= user._id %>" data-user-email="<%=user.local.email%>" data-toggle="modal" data-target="#userDeleteModal" class = "btn btn-danger deleteUSer">Delete User</button></td>
                </tr>
            <% }); %>
            </tbody>
            </table>
        </div>
    </div>
    

<!-- Modals -->

<div class="modal fade" id="userDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="userToDeleteEmail"></p>
        <strong>You are about to Delete this User. This cannot be undone.</strong>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="userDeleteConfirm">Delete User</button>
      </div>
    </div>
  </div>
</div>


<!-- Scripts --> 
<script>

$(document).ready(function(){

    $('#userDeleteModal').on('show.bs.modal', function(e){
        var button = $(e.relatedTarget); 
        var modal = $(this);
        modal.find('#userToDeleteEmail').text(button.data('userEmail'));
        modal.find('#userDeleteConfirm').on('click', function(e){
            var url = "http://localhost:3000/api/users/" + button.data('userId');
            $.ajax({
                  type: "DELETE",
                  url: url,
                  dataType: 'json',
                  async: true,
                  success: function (){
                        location.reload(true);
                    }
            })
        })
    });

    $('#userDeleteModal').on('hide.bs.modal', function(e){
        var modal = $(this);
        modal.find('#userDeleteConfirm').off('click');
    });
    
})
</script>
</body>
</html>
