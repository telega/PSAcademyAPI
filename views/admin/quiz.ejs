      <a class="navbar-brand" href="/admin"><span class="glyphicon glyphicon-education" aria-hidden="true"></span></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/admin/courses">Courses</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li class="active"><a href="/admin/quizzes">Quizzes</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class = "row">
        <div class = "col-md-12">
            <h1><span class="glyphicon glyphicon-education" aria-hidden="true"></span> Academy Admin </h1>
        <div>
    </div>
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <li><a href="/admin">Home</a></li>
                <li><a href="/admin/quizzes">Quizzes</a></li>
                <li class ="active"><%=quiz.name%></li>
            </ol>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-12">
            <h3>Edit Quiz</h3>
            <h2><%=quiz.name%></h2>
        </div>
    </div>
    <h3>Quiz Questions</h3>
    <% if(quiz.questions.length > 0){ %>
      <div class = "row">
          <div class="col-md-12">
              <table width='100%' class="table table-striped">
              <thead>
                  <th>#</th>
                  <th>Question</th>
                  <th>Actions</th>
              </thead>    
              <tbody>
              <% quiz.questions.forEach(function(question){ %>
                  <tr>
                      <td></td>
                      <td><%= question.q %></td>
                      <td>
                      <a href = "/admin/quizzes/<%= quiz._id %>/questions/<%=question._id%>" data-quiz-id = "<%= quiz._id %>" class = "btn   btn-default">Edit</a>
                      <button  data-quiz-id = "<%= quiz._id %>" data-quiz-name = "<%= quiz.name %>" data-toggle=" modal" data-target="#deleteQuizModal" class = "btn btn-danger deleteQuiz">Delete</button>
                      </td>
                  </tr>
  
              <% }); %>
              </tbody>
              </table>
          </div>
      </div>
     <% }%>
    <div class = "row">
        <div class ="col-md-2">
            <button data-toggle="modal" data-target="#addQuestionModal" class = "btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Quiz Question</button>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="addQuestionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a New Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "addQuestion" data-quiz-id = "<%=quiz._id%>">
            <div class="form-group">
              <label for="quizQuestion">Question*</label>
              <input required type="text" class="form-control" id="quizQuestion" placeholder="What is the sound of one hand clapping?">
            </div>
            <div class="form-group">
              <label for="quizCorrectResponse">Correct Response*</label>
              <input required type="text" class="form-control" id="quizCorrectResponse" placeholder="Correct">
            </div>
            <div class="form-group">
              <label for="quizIncorrectResponse">Incorrect Response*</label>
              <input required type="text" class="form-control" id="quizIncorrectResponse" placeholder="Incorrect">
            </div>
            <div class="form-group">
              <label for="quizAnswers">Answers</label>
              <div class="form-horizontal" id="quizAnswers">
                <div class="quizAnswer">
                  <input type="text" class="form-control">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox"> Check if Correct
                      </label>
                    </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <a href="#" id="quizAddAnswer" class = "btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></a>
              <label for="quizAddAnswer">Add Answer Option</label>
            </div>
            <button type="submit" class="btn btn-success">Add Question</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" >Cancel</button>
      </div>
    </div>
  </div>
</div>


