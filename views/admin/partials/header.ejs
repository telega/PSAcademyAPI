<!doctype html>
<html>
<head>
    <title>Academy Admin | <%=page.title%></title>
    <link rel="apple-touch-icon" href="/public/apple-touch-icon.png">

	<link rel="stylesheet" href="/public/bootstrap.css" crossorigin="anonymous"> <!-- load bootstrap css -->    

	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
 	<link href="/public/trumbowyg.min.css" rel="stylesheet">

    
<style>
  body{
    padding-top:65px;
    min-height:100%;
    padding-bottom:20px;
  }
</style>
</head>
<body data-page-ui-type="<%=page.pageUIType%>">
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <a class="navbar-brand"  href="/admin"><span class="fa fa-graduation-cap" aria-hidden="true"></span></a>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class=" navbar-nav mr-auto">
        <li class = "nav-item"><a href="/admin/courses" class = "nav-link <% if(page.activeNavItem == 'Courses'){ %> active <%}%> ">Courses</a></li>
        <li class = "nav-item"><a href="/admin/users" class = "nav-link <% if(page.activeNavItem == 'Users'){ %> active <%}%> ">Users</a></li>
        <li class = "nav-item"><a href="/admin/leaderboard" class = "nav-link <% if(page.activeNavItem == 'Leaderboard'){ %> active <%}%> ">Leaderboard</a></li>
        <li class = "nav-item"><a href="/admin/quizzes" class = "nav-link <% if(page.activeNavItem == 'Quizzes'){ %> active <%}%> ">Quizzes</a></li>
        <li class = "nav-item"><a href="/admin/feedback" class = "nav-link <% if(page.activeNavItem == 'Feedback'){ %> active <%}%> ">Feedback</a></li>
        <li class = "nav-item"><a href="/admin/academy" class = "nav-link <% if(page.activeNavItem == 'Options'){ %> active <%}%> ">Options</a></li>
		<li class = "nav-item"><a href="/admin/glossary" class = "nav-link <% if(page.activeNavItem == 'Glossary'){ %> active <%}%> ">Glossary</a></li>
		<li class = "nav-item"><a href="/admin/tags" class = "nav-link <% if(page.activeNavItem == 'Tags'){ %> active <%}%> ">Tags</a></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class = "nav-item"><a href="/logout" class="nav-link">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
</nav>

<div class="container">
    <div class = row>
        <div class = "col-md-12">
            <ol class="breadcrumb">
                <% var crumbsCount = page.breadcrumbs.length;
                page.breadcrumbs.forEach(function(breadcrumb,i){
                  if(i+1 == crumbsCount){%>
                    <li class="breadcrumb-item active"><%-breadcrumb.title%></li>
                  <%}else{%>
                    <li class="breadcrumb-item"><a href="<%=breadcrumb.url%>"><%-breadcrumb.title%></a></li>
                <%}})%>
            </ol>
        </div>
    </div>
</div>